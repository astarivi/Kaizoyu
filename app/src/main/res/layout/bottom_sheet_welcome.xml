<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_upper"
    android:backgroundTint="?attr/colorSurfaceVariant">
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/bottom_sheet_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="14dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
            <TextView
                android:layout_marginStart="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_welcome"
                android:fontFamily="@font/lato_bold"
                android:textSize="22sp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/branding_accent"
                android:gravity="center_horizontal"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/first_welcome_desc"
                android:textSize="16sp"
            />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/branding_accent"
                android:text="@string/fw_privacy"
                android:textSize="18sp"
                android:gravity="center_horizontal"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/fw_privacy_desc"
                android:textSize="15sp"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/fw_privacy_conf"
                android:textSize="16sp"
                android:gravity="center_horizontal"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/fw_privacy_false"
                    android:textSize="18sp"
                    android:layout_marginEnd="40dp"
                />
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:id="@+id/analyticsValue"
                    android:fontFamily="@font/lato_regular"
                    android:checked="false"
                    app:showText="false"
                />
                <TextView
                    android:textColor="@color/branding_accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/fw_privacy_true"
                    android:textSize="18sp"
                    android:layout_marginStart="40dp"
                />
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/fw_privacy_updates"
                android:textSize="16sp"
                android:gravity="center_horizontal"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/fw_privacy_false"
                    android:textSize="18sp"
                    android:layout_marginEnd="40dp"
                />
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:id="@+id/updateCheck"
                    android:fontFamily="@font/lato_regular"
                    android:checked="true"
                    app:showText="false"
                />
                <TextView
                    android:textColor="@color/branding_accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/fw_privacy_true"
                    android:textSize="18sp"
                    android:layout_marginStart="40dp"
                />
            </LinearLayout>

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/branding_accent"
                android:text="@string/fw_preferences"
                android:textSize="18sp"
                android:gravity="center_horizontal"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/fw_preferences_desc"
                android:textSize="15sp"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/fw_pref_language"
                android:textSize="16sp"
                android:gravity="center_horizontal"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/fw_pref_language_false"
                    android:textSize="18sp"
                    android:layout_marginEnd="40dp"
                />
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:id="@+id/languageValue"
                    android:fontFamily="@font/lato_regular"
                    android:checked="true"
                    app:showText="false"
                />
                <TextView
                    android:textColor="@color/branding_accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/fw_pref_language_true"
                    android:textSize="18sp"
                    android:layout_marginStart="40dp"
                />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/lato_bold"
                android:text="@string/fw_pref_autofav"
                android:textSize="16sp"
                android:gravity="center_horizontal"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/fw_privacy_false"
                    android:textSize="18sp"
                    android:layout_marginEnd="40dp"
                />
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:id="@+id/autoFavValue"
                    android:fontFamily="@font/lato_regular"
                    android:checked="false"
                    app:showText="false"
                />
                <TextView
                    android:textColor="@color/branding_accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/fw_privacy_true"
                    android:textSize="18sp"
                    android:layout_marginStart="40dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/fw_end"
                android:textSize="15sp"
                android:gravity="center_horizontal"
            />


            <com.google.android.material.button.MaterialButton
                android:layout_gravity="center_horizontal"
                android:id="@+id/go_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button"
                android:text="@string/fw_end_button"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/branding_accent"
            />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
