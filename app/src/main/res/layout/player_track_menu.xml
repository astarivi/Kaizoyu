<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/language_popup_root"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
    >

        <TextView
                android:text="@string/audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/audioLabel"
            android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/lato_bold"
                android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"/>
        <TextView
                android:text="@string/subtitles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtitlesLabel"
            android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/lato_bold"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/divider2"
                android:layout_marginStart="40dp"/>
        <View
                android:id="@+id/divider2"
                android:layout_width="1dp"
                android:background="#00FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="1dp"
                android:layout_height="0dp"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_close"
            android:id="@+id/close_popup_btn"
            app:tint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="11dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="11dp"
            android:contentDescription="@string/close_modal_button_desc"
        />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/seekbar_track_fade"
            android:id="@+id/fade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@+id/divider2"
            android:importantForAccessibility="no"
        />
        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/divider2"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toBottomOf="@+id/audioLabel"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/audio_scroll_view"
                android:scrollbarThumbVertical="@null"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/audio_list"
            />
        </ScrollView>
        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toEndOf="@+id/divider2"
                android:layout_marginStart="40dp"
                app:layout_constraintTop_toBottomOf="@+id/subtitlesLabel"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                android:id="@+id/subtitles_scroll_view"
                android:scrollbarThumbVertical="@null"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/subtitles_list"
            />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>