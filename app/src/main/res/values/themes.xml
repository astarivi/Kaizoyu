<resources>
    <style name="BaseTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="materialAlertDialogTheme">@style/CustomMaterialAlertDialogTheme</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceVariant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- High Contrast theme. -->
    <style name="HighContrast" parent="BaseTheme">
        <item name="colorPrimary">@color/hc_onPrimary</item>
        <item name="colorOnPrimary">@color/hc_primary</item>
        <item name="colorPrimaryContainer">@color/hc_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/hc_onPrimaryContainer</item>
        <item name="colorSecondary">@color/hc_secondary</item>
        <item name="colorOnSecondary">@color/hc_onSecondary</item>
        <item name="colorSecondaryContainer">@color/hc_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/hc_onSecondaryContainer</item>
        <item name="colorTertiary">@color/hc_tertiary</item>
        <item name="colorOnTertiary">@color/hc_onTertiary</item>
        <item name="colorTertiaryContainer">@color/hc_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/hc_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/hc_background</item>
        <item name="android:textColor">@color/hc_onSurface</item>
        <item name="android:listDivider">@color/hc_onTertiary</item>
        <item name="colorControlNormal">@color/hc_onSurface</item>
        <item name="colorOnBackground">@color/hc_onSurface</item>
        <item name="colorSurface">@color/hc_background</item>
        <item name="colorOnSurface">@color/hc_onSurface</item>
        <item name="colorSurfaceVariant">@color/hc_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/hc_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="android:statusBarColor">@color/hc_background</item>
        <item name="android:navigationBarColor">@color/hc_surfaceVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Kitsune Takeover theme. -->
    <style name="KitsuneTakeover" parent="BaseTheme">
        <item name="colorPrimary">@color/kt_primary</item>
        <item name="colorOnPrimary">@color/kt_onPrimary</item>
        <item name="colorPrimaryContainer">@color/kt_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/kt_onPrimaryContainer</item>
        <item name="colorSecondary">@color/kt_secondary</item>
        <item name="colorOnSecondary">@color/kt_onSecondary</item>
        <item name="colorSecondaryContainer">@color/kt_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/kt_onSecondaryContainer</item>
        <item name="colorTertiary">@color/kt_tertiary</item>
        <item name="colorOnTertiary">@color/kt_onTertiary</item>
        <item name="colorTertiaryContainer">@color/kt_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/kt_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_dark_error</item>
        <item name="colorErrorContainer">@color/md_theme_dark_errorContainer</item>
        <item name="colorOnError">@color/md_theme_dark_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_dark_onErrorContainer</item>
        <item name="android:colorBackground">@color/kt_background</item>
        <item name="android:textColor">@color/kt_onSurface</item>
        <item name="android:listDivider">@color/kt_onTertiary</item>
        <item name="colorControlNormal">@color/kt_onSurface</item>
        <item name="colorOnBackground">@color/kt_onSurface</item>
        <item name="colorSurface">@color/kt_background</item>
        <item name="colorOnSurface">@color/kt_onSurface</item>
        <item name="colorSurfaceVariant">@color/kt_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/kt_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="android:statusBarColor">@color/kt_background</item>
        <item name="android:navigationBarColor">@color/kt_surfaceVariant</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>